{
  "compilerOptions": {
    "target": "ES2020",
    "typeRoots": ["./node_modules/@types", "./types"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*",
    "types/**/*"  // Include your custom types
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}